<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="App\Entity\Product" table="product">
        <id name="id" type="integer" column="id">
            <generator strategy="IDENTITY"/>
        </id>
        <field name="name" column="name" type="string" length="255" nullable="false" />
        <field name="description" column="description" type="text" nullable="true" />
        <field name="ingredients" column="ingredients" type="text" nullable="true" />
        <field name="price" column="price" type="integer" nullable="false" />
        <field name="image" column="image" type="string" length="255" nullable="false" />
        <field name="section" column="section" type="string" length="255" nullable="true" />
    </entity>
</doctrine-mapping>
