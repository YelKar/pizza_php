<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Document</title>
  <style>
    .user-table {
      background-color: #ccc;

      padding: 6px;
      border-radius: 3px;
    }
    .user-table__row {
        width: max-content;
        background-color: #aaa;
        gap: 5px;
        margin: 3px;
        padding: 4px;

        border-radius: 5px;
    }
    .user-table__cell {
        padding: 3px 6px;
        border-radius: 3px;
    }
    .user-table__row a {
        text-decoration: none;
        color: #444;
    }
  </style>
</head>
<body>
<table class="user-table">
  <tbody>
  {% for user in users %}
    <tr class="user-table__row">
      <td class="user-table__cell">
        <a href="{{ path("show_user", {id: user.getId()}) }}">
          Просмотр
        </a>
      </td>
      <td class="user-table__cell">{{ user.getId() | e }}</td>
      <td class="user-table__cell">{{ user.getLastName() | e }}</td>
      <td class="user-table__cell">{{ user.getFirstName() | e }}</td>
      <td class="user-table__cell">{{ user.getEmail() | e }}</td>
      <td class="user-table__cell">{{ user.getPhone() | e }}</td>
    </tr>
  {% endfor %}
  </tbody>
</table>


</body>
</html>